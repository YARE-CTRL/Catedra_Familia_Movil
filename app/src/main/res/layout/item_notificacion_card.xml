<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_notificacion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Icono -->
        <TextView
            android:id="@+id/tv_icono"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="ðŸ””"
            android:textSize="22sp"
            android:background="@color/gray_100"
            android:layout_marginEnd="12dp" />

        <!-- Contenido -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- TÃ­tulo -->
            <TextView
                android:id="@+id/tv_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nueva tarea asignada"
                android:textColor="@color/gray_900"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp" />

            <!-- Mensaje -->
            <TextView
                android:id="@+id/tv_mensaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Se ha asignado la tarea..."
                android:textColor="@color/gray_600"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="4dp" />

            <!-- Tiempo -->
            <TextView
                android:id="@+id/tv_tiempo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hace 2 horas"
                android:textColor="@color/gray_600"
                android:textSize="11sp"
                android:layout_marginBottom="8dp" />

            <!-- BotÃ³n de acciÃ³n -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_accion"
                style="@style/CustomTonalButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="VER TAREA"
                android:textSize="11sp"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

