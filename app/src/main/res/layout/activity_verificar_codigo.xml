<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/gray_50"
    tools:context=".VerificarCodigoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Botón volver -->
        <ImageButton
            android:id="@+id/btn_volver"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Volver"
            app:tint="@color/primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Título -->
        <TextView
            android:id="@+id/tv_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/verificar_codigo_titulo"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/primary_dark"
            app:layout_constraintTop_toBottomOf="@id/btn_volver"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Mensaje -->
        <TextView
            android:id="@+id/tv_mensaje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/ingresa_codigo"
            android:textSize="16sp"
            android:textColor="@color/gray_600"
            app:layout_constraintTop_toBottomOf="@id/tv_titulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Correo oculto -->
        <TextView
            android:id="@+id/tv_correo_oculto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="mari***@gmail.com"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            app:layout_constraintTop_toBottomOf="@id/tv_mensaje"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Layout de inputs de código -->
        <LinearLayout
            android:id="@+id/ll_codigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tv_correo_oculto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/et_codigo1"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/bg_codigo_input"
                android:textColor="@color/primary_dark" />

            <EditText
                android:id="@+id/et_codigo2"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/bg_codigo_input"
                android:textColor="@color/primary_dark" />

            <EditText
                android:id="@+id/et_codigo3"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/bg_codigo_input"
                android:textColor="@color/primary_dark" />

            <EditText
                android:id="@+id/et_codigo4"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/bg_codigo_input"
                android:textColor="@color/primary_dark" />

            <EditText
                android:id="@+id/et_codigo5"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/bg_codigo_input"
                android:textColor="@color/primary_dark" />

            <EditText
                android:id="@+id/et_codigo6"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:layout_margin="4dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/bg_codigo_input"
                android:textColor="@color/primary_dark" />

        </LinearLayout>

        <!-- Botón verificar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_verificar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/btn_verificar_codigo"
            android:textSize="16sp"
            android:paddingVertical="16dp"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/primary"
            app:icon="@android:drawable/ic_menu_send"
            app:iconGravity="textStart"
            app:layout_constraintTop_toBottomOf="@id/ll_codigo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Contador expiración -->
        <TextView
            android:id="@+id/tv_expiracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="El código expira en: 14:59"
            android:textSize="14sp"
            android:textColor="@color/warning"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/btn_verificar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Reenviar código -->
        <TextView
            android:id="@+id/tv_no_recibiste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/no_recibiste_codigo"
            android:textSize="14sp"
            android:textColor="@color/gray_600"
            app:layout_constraintTop_toBottomOf="@id/tv_expiracion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_reenviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/reenviar_codigo"
            android:textSize="16sp"
            android:textColor="@color/accent"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@id/tv_no_recibiste"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ProgressBar -->
        <ProgressBar
            android:id="@+id/pb_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tv_reenviar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

