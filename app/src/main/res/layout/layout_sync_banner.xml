<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/syncBanner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/info"
    app:cardElevation="4dp"
    app:cardCornerRadius="0dp"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Indicador de progreso -->
        <ProgressBar
            android:id="@+id/progressSync"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:indeterminateTint="@color/white"/>

        <!-- Mensaje de sincronización -->
        <TextView
            android:id="@+id/tvSyncMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sync_sincronizando"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginStart="12dp"/>

        <!-- Botón cerrar/cancelar -->
        <ImageButton
            android:id="@+id/btnCancelSync"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white"
            android:contentDescription="@string/desc_cerrar_sync_banner"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

