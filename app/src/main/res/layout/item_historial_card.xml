<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_entrega"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Indicador de estado (barra lateral) -->
        <View
            android:id="@+id/view_indicador"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/success" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header: Icono + Título -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_icono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✅"
                    android:textSize="20sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tv_titulo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lectura en familia"
                    android:textColor="@color/gray_900"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Fecha de entrega -->
            <TextView
                android:id="@+id/tv_fecha_entrega"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entregada: 20 Nov 2025"
                android:textColor="@color/gray_600"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <!-- Calificación -->
            <TextView
                android:id="@+id/tv_calificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calificación: Alto (4.5)"
                android:textColor="@color/success"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Feedback del docente -->
            <LinearLayout
                android:id="@+id/layout_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_feedback"
                android:layout_marginBottom="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Retroalimentación:"
                    android:textColor="@color/gray_600"
                    android:textSize="11sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tv_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="&quot;Excelente reflexión familiar.&quot;"
                    android:textColor="@color/gray_900"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="italic" />

            </LinearLayout>

            <!-- Botón Ver Evidencia -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ver_evidencia"
                style="@style/CustomTonalButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="end"
                android:text="VER EVIDENCIA"
                android:textSize="11sp"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

