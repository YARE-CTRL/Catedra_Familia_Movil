<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/gray_50"
    tools:context=".SoporteActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Botón volver -->
        <ImageButton
            android:id="@+id/btn_volver"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Volver"
            app:tint="@color/primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Título -->
        <TextView
            android:id="@+id/tv_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/soporte_titulo"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/primary_dark"
            app:layout_constraintTop_toBottomOf="@id/btn_volver"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Card Contacto Directo -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_contacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tv_titulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contacto_directo"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_900" />

                <!-- Email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email_label"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_600" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/email_soporte"
                        android:textSize="16sp"
                        android:textColor="@color/primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/btn_enviar_email"
                        android:textSize="14sp"
                        app:cornerRadius="8dp"
                        app:backgroundTint="@color/info"
                        app:icon="@android:drawable/ic_dialog_email"
                        app:iconGravity="textStart" />
                </LinearLayout>

                <!-- WhatsApp -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/whatsapp_label"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_600" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/whatsapp_numero"
                        android:textSize="16sp"
                        android:textColor="@color/success" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_whatsapp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/btn_abrir_whatsapp"
                        android:textSize="14sp"
                        app:cornerRadius="8dp"
                        app:backgroundTint="@color/success"
                        app:icon="@android:drawable/stat_notify_chat"
                        app:iconGravity="textStart" />
                </LinearLayout>

                <!-- Horario -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:background="@color/gray_100"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/horario_atencion"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_900" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/horario_detalle"
                        android:textSize="14sp"
                        android:textColor="@color/gray_600" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Versión -->
        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Versión de la app: 1.0.0"
            android:textSize="12sp"
            android:textColor="@color/gray_600"
            app:layout_constraintTop_toBottomOf="@id/cv_contacto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

