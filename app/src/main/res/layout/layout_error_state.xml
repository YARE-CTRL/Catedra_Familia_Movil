<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutError"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:visibility="gone">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationError"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:lottie_rawRes="@raw/animation"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"/>

    <TextView
        android:id="@+id/tvErrorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_sin_conexion"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/gray_900"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tvErrorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_sin_conexion_mensaje"
        android:textSize="15sp"
        android:textColor="@color/gray_600"
        android:textAlignment="center"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="24dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRetry"
        style="@style/CustomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_reintentar"
        android:textSize="14sp"
        android:paddingHorizontal="32dp"
        android:layout_marginTop="32dp"
        app:icon="@android:drawable/ic_menu_rotate"
        app:iconGravity="textStart"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOfflineMode"
        style="@style/CustomTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_ver_guardados"
        android:textSize="13sp"
        android:layout_marginTop="12dp"/>

</LinearLayout>

