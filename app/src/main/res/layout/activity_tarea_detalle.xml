<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_50">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@color/white"
            app:subtitleTextColor="#B3FFFFFF"
            app:navigationIcon="@drawable/ic_arrow_back" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- ScrollView con contenido -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card Detalles de la Tarea -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detalles"
                        android:textSize="14sp"
                        android:textColor="@color/gray_600"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <!-- Frecuencia -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Frecuencia: "
                            android:textColor="@color/gray_600"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_frecuencia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Semanal"
                            android:textColor="@color/gray_900"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Fecha Vencimiento -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vence: "
                            android:textColor="@color/gray_600"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_fecha_vencimiento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="29 Nov 2026"
                            android:textColor="@color/gray_900"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Para el boletÃ­n -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Para el boletÃ­n: "
                            android:textColor="@color/gray_600"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_para_boletin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SÃ­"
                            android:textColor="@color/secondary"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Estado de la Tarea -->
            <TextView
                android:id="@+id/tv_estado_tarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/bg_estado_tarea"
                android:text="ðŸ“‹ Pendiente de entregar"
                android:textColor="@color/gray_900"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <!-- Card DescripciÃ³n -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DescripciÃ³n"
                        android:textSize="14sp"
                        android:textColor="@color/gray_600"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_descripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DescripciÃ³n de la tarea..."
                        android:textColor="@color/gray_900"
                        android:textSize="15sp"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card Evidencia (solo si puede entregar) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_evidencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ Tu Evidencia"
                        android:textSize="16sp"
                        android:textColor="@color/primary"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <!-- EditText para evidencia -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="500">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_evidencia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Describe quÃ© hicieron en familia..."
                            android:minLines="4"
                            android:maxLines="6"
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:maxLength="500" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Botones para agregar archivos -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adjuntar fotos (mÃ¡x. 3)"
                        android:textSize="13sp"
                        android:textColor="@color/gray_600"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_foto"
                            style="@style/CustomOutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="ðŸ“· CÃ¡mara"
                            android:textSize="12sp"
                            android:layout_marginEnd="8dp"
                            app:cornerRadius="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_galeria"
                            style="@style/CustomOutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="ðŸ–¼ï¸ GalerÃ­a"
                            android:textSize="12sp"
                            app:cornerRadius="8dp" />

                    </LinearLayout>

                    <!-- Preview de archivos seleccionados -->
                    <LinearLayout
                        android:id="@+id/ll_archivos_preview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone" />

                    <!-- BotÃ³n Enviar -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_enviar"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="ENVIAR EVIDENCIA"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/primary"
                        app:cornerRadius="12dp"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card CalificaciÃ³n (solo si estÃ¡ calificada) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_calificacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/secondary"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ… CalificaciÃ³n"
                        android:textSize="16sp"
                        android:textColor="@color/secondary"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <!-- Nota -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nota: "
                            android:textColor="@color/gray_600"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_nota"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alto (4.5)"
                            android:textColor="@color/secondary"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <!-- Feedback -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RetroalimentaciÃ³n:"
                        android:textColor="@color/gray_600"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Excelente trabajo en familia..."
                        android:textColor="@color/gray_900"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp"
                        android:background="@color/gray_50"
                        android:padding="12dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

